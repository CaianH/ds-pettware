<Window x:Class="PETTWARE.ConsulCaixaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PETTWARE"
        mc:Ignorable="d"
       Title="Consultar Caixa"  MinHeight="550" MinWidth="1000" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#FFF5F3F4">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"  BorderThickness="1" BorderBrush="#FF5C677D" Height="22" Width="1922" Background="#FF5C677D"/>

        <WrapPanel Grid.Row="1" Margin="30 15 0 0">
            <StackPanel Margin="0 0 100 0">
                <Label Content="Receita total: " Margin="0 0 10 0" FontSize="17"/>
                <TextBox Width="400" Text="" Margin="0 0 50 0" FontSize="17" />
                <Label Content="Total de vendas: " Margin="0 0 10 0" FontSize="17"/>
                <TextBox Width="400" Text="" Margin="0 0 50 0" FontSize="17" />
                <Label Content="Despesas totais: " Margin="0 0 10 0" FontSize="17"/>
                <TextBox Width="400" Text="" Margin="0 0 50 0" FontSize="17" />
                <Label Content="Saldo: " Margin="0 0 10 0" FontSize="17"/>
                <TextBox Width="400" Text="" Margin="0 0 50 0" FontSize="17" />
                <Label Content="Lucro: " Margin="0 0 10 0" FontSize="17"/>
                <TextBox Width="400" Text="" Margin="0 0 50 0" FontSize="17" />
                <Label Content="Débito: " Margin="0 0 10 0" FontSize="17"/>
                <TextBox Width="400" Text="" Margin="0 0 50 0" FontSize="17" />
                
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>
