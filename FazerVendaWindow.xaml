<Window x:Class="PETTWARE.FazerVendaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PETTWARE"
        xmlns:wpftool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="Vender" Height="1080" Width="1920" MinHeight="450" MinWidth="800" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#FFF5F3F4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640"/>
            <ColumnDefinition Width="640"/>
            <ColumnDefinition Width="640"/>

        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
            <Border BorderThickness="1" BorderBrush="#FF5C677D" Height="40" Width="1922" Background="#FF5C677D"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Content="Nome do Cliente" Margin="30 30 0 0" Background="{x:Null}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Left"/>
            <TextBox Text="João Teixeira" Margin="30 0 0 0" TextWrapping="Wrap" Width="272" Background="White" HorizontalAlignment="Left" Height="25" FontSize="17"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="Forma de Pagamento" Margin="30 30 0 0" Background="{x:Null}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Left"/>
            <ComboBox Width="221" Margin="35 0 0 0" HorizontalAlignment="Left" Background="White" BorderBrush="White" Height="25">
                <ComboBoxItem>3X NO CARTÃO</ComboBoxItem>
                <ComboBoxItem>2X NO CARTÃO</ComboBoxItem>
                <ComboBoxItem>ÁVISTA</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <Label Content="Dia da Compra" Margin="30 30 0 0" Background="{x:Null}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Left"/>
            <DatePicker Width="171" Margin="35 0 0 0" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0">
            <Label Content="Nome do Funcionário/a" Margin="30 30 0 0" Background="{x:Null}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Left"/>
            <TextBox Text="" Margin="30 0 0 0" TextWrapping="Wrap" Width="272" Background="White" HorizontalAlignment="Left" Height="25"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <Label Content="Buscar Produto / Serviço" Margin="30 30 0 0" Background="{x:Null}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Left"/>
            <ComboBox Width="272" Margin="30 0 0 0" HorizontalAlignment="Left" Background="White" BorderBrush="White" Height="25"/>

        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,408,0">
            <Label Content="Quantidade" Margin="30 30 0 0" Background="{x:Null}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Left"/>
            <TextBox Text="" Margin="35 0 0 0" TextWrapping="Wrap" Width="63" Background="White" HorizontalAlignment="Left" Height="25"/>
        </StackPanel>
        <Image Source="/Imagens/consultar.png" Height="30" VerticalAlignment="Top" Margin="296,60,285,0" Grid.Row="3" RenderTransformOrigin="0.51,2.646"/>
        <Image Source="/Imagens/iconeadicionar.png" Margin="106,65,490,10" Grid.Row="3" Grid.Column="1"/>
        <Label Content="Adicionar Item" Grid.Column="1" HorizontalAlignment="Left" Margin="427,30,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="17"/>
        <Image Source="/Imagens/novavenda.png" Margin="455,58,141,0" Grid.Row="3" Grid.Column="1"/>

        <Label Grid.Row="3" Grid.Column="3" Content="Vender" Margin="30 30 0 0" Background="{x:Null}" FontSize="17" FontWeight="Bold" HorizontalAlignment="Left" Width="68"/>
        <Image Source="/Imagens/vender.png" Height="43" Width="71" HorizontalAlignment="Left" Grid.Column="2" Margin="44,57,0,0" Grid.Row="3"/>
        <DataGrid x:Name="datagridVenda" Grid.Row="4" Margin="33,164,0,137" Loaded="datagridVenda_Loaded" RenderTransformOrigin="0.501,0.771"/>
        <Button Content="Excluir Produto" Grid.Column="1" HorizontalAlignment="Left" Margin="145,258,0,0" Grid.Row="4" VerticalAlignment="Top" Height="44" Width="190" Background="#FFD00000" FontWeight="Bold" Foreground="White"/>


    </Grid>
</Window>
