<Window x:Class="PETTWARE.FazerVendaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PETTWARE"
        xmlns:wpftool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="Vender"  MinHeight="550" MinWidth="1000" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#FFF5F3F4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0"  BorderThickness="1" BorderBrush="#FF5C677D" Height="22" Width="1922" Background="#FF5C677D"/>

        <WrapPanel Grid.Row="1" Margin="30 15 0 0">
            <StackPanel Margin="0 0 100 0">
                <Label Content="Nome do Cliente" Margin="0 0 10 0" FontSize="17"/>
                <TextBox Width="250" Text="João Teixeira" Margin="0 0 50 0" FontSize="17" />
            </StackPanel>
            <StackPanel Margin="0 0 100 0">
                <Label Content="Forma de Pagamento" Margin="0 0 10 0" FontSize="17"/>
                <ComboBox FontSize="17">
                    <ComboBoxItem>3X NO CARTÃO</ComboBoxItem>
                    <ComboBoxItem>2X NO CARTÃO</ComboBoxItem>
                    <ComboBoxItem>ÁVISTA</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel >
                <Label Content="Data da Venda" Margin="0 0 10 0" FontSize="17"/>
                <DatePicker Width="200"/>
            </StackPanel>
        </WrapPanel>

        <StackPanel Grid.Row="2" Margin="30 10 0 0">
            <Label Content="Nome do Funcionário" Margin="0 0 10 0" FontSize="17"/>
            <ComboBox Width="250" HorizontalAlignment="Left" FontSize="17">
                <ComboBoxItem>Thor Odin Son</ComboBoxItem>
                <ComboBoxItem>Tony Stark</ComboBoxItem>
                <ComboBoxItem>Steve Rogers</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <WrapPanel Margin="30 10 0 0" Grid.Row="3">
            
        </WrapPanel>

        <WrapPanel Margin="30 10 0 0" Grid.Row="4">
            <DataGrid x:Name="datagridVenda" Height="200" Width="500" Loaded="datagridVenda_Loaded" SelectionChanged="DataGrid_SelectionChanged"/>
            <Button VerticalAlignment="Bottom" Margin="50 0 0 0"  Grid.Row="3" Width="150" Height="35" HorizontalAlignment="Left" Background="#FFD00000" Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0 5 20 0" Text="Excluir" FontSize="17" FontWeight="Bold"/>
                    <Image Source="/Imagens/cancelarExcluir.png"/>
                </StackPanel>
            </Button>
        </WrapPanel>

       



    </Grid>
</Window>
