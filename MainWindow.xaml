<Window x:Class="PETTWARE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PETTWARE"
        xmlns:wpftool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="PETTWARE" MinHeight="650" MinWidth="900" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#FFF5F3F4">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1">

            <Menu Background="#2a9d8f">
                <!--___________CADASTROS___________-->
                <MenuItem Header="Cadastrar" Click="MenuItem_Click" Foreground="Black">

                    <MenuItem Header="Serviço" Click="Click_CadServico"/>

                    <MenuItem Header="Produto" Click="Click_Produto"/>
                    <MenuItem Header="Cliente" Click="Click_CadCliente"/>
                    <MenuItem Header="Funcionário" Click="Click_CadFuncionario"/>
                    <MenuItem Header="Fornecedor" Click="Click_CadFornecedor"/>
                    <MenuItem Header="Despesas" Click="Click_CadDespesas"/>
                    <MenuItem Header="Tipo de Despesa" Click="TipoDespesa_Click"/>
                    <MenuItem Header="Usuário" Click="CadUsuario_Click"/>
                </MenuItem>
                <!--___________CADASTROS___________-->


                <!--___________CONSULTAS___________-->
                <MenuItem Header="Consultar" Click="Consultar_Click" Foreground="Black">
                    <MenuItem Header="Produto" Click="Produto_Click"/>
                    <MenuItem Header="Cliente" Click="ConsultarCliente_Click"/>
                    <MenuItem Header="Caixa" Click="ConsuCaixa_Click"/>
                    <MenuItem Header="Funcionário" Click="ConsuFuncionario"/>
                </MenuItem>
                <!--___________CONSULTAS___________-->

                <MenuItem Header="Vender" Click="Click_Vender" Foreground="Black"/>


            </Menu>

        </StackPanel>

        <StackPanel Grid.RowSpan="2" Grid.Column="0" Background="#264653">
            <Image Margin="30" Source="/Imagens/png loja.png" Height="128" Width="250"/>

            <StackPanel Margin="30 0 0 0" Grid.Row="1" Grid.Column="0">
                <Button Margin="0 0 0 20" Width="200" Height="50" BorderBrush="#FF264653" Cursor="Hand" Click="BtProdutos_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF264653" Offset="1"/>
                            <GradientStop Color="#FF2A9D8F" Offset="0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 10 20 0" Text="Produtos" FontSize="17" Foreground="#FFF5F3F4"/>
                        <Image Source="/Imagens/produtos.png"/>
                    </StackPanel>
                </Button>
                <Button Margin="0 0 0 20" Width="200" Height="50"   Cursor="Hand" Click="BtFuncionarios_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF264653" Offset="1"/>
                            <GradientStop Color="#FF2A9D8F" Offset="0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 10 20 0" Text="Funcionários" FontSize="17" Foreground="#FFF5F3F4"/>
                        <Image Source="/Imagens/funcionarios.png"/>
                    </StackPanel>
                </Button>
                <Button Margin="0 0 0 20" Width="200" Height="50"   Cursor="Hand" Click="BtClientes_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF264653" Offset="1"/>
                            <GradientStop Color="#FF2A9D8F" Offset="0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 10 20 0" Text="Clientes" FontSize="17" Foreground="#FFF5F3F4"/>
                        <Image Source="/Imagens/cliente.png"/>
                    </StackPanel>
                </Button>
                <Button Margin="0 0 0 20" Width="200" Height="50" Cursor="Hand" Click="BtCaixa_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF264653" Offset="1"/>
                            <GradientStop Color="#FF2A9D8F" Offset="0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 10 20 0" Text="Caixa" FontSize="17" Foreground="#FFF5F3F4"/>
                        <Image Source="/Imagens/caixa.png"/>
                    </StackPanel>
                </Button>
                <Button Margin="0 0 0 20" Width="200" Height="50"  Cursor="Hand" Click="BtVender_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF264653" Offset="1"/>
                            <GradientStop Color="#FF2A9D8F" Offset="0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 10 20 0" Text="Vender" FontSize="17" Foreground="#FFF5F3F4"/>
                        <Image Source="/Imagens/carrinho.png"/>
                    </StackPanel>
                </Button>

            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
