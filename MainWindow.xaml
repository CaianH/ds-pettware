<Window x:Class="PETTWARE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PETTWARE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Menu>
                <MenuItem Header="Cadastrar">
                    <MenuItem Header="Produto" Click="Click_Produto"/>
                    <MenuItem Header="Serviço" Click="Click_CadServico"/>
                    
                </MenuItem>
                <MenuItem Header="Consultar">
                    <MenuItem Header="Produto"/>
                    
                </MenuItem>
            </Menu>
        </StackPanel>

    </Grid>
</Window>
